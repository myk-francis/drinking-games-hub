generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "postgresql"
}
model User {
  id            String      @id @default(dbgenerated("gen_random_uuid()"))
  username      String      @unique
  passcode      String
  active        Boolean @default(true)
  isAdmin       Boolean @default(false)
  sessions      Session[]
  rooms         Room[]
  createdAt     DateTime @default(now())
}

model Game {
  id            Int     @id @default(autoincrement())
  code          String
  name          String
  description   String
  questions     Question[]
  rooms         Room[]
  published     Boolean @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Question {
  id        Int     @id @default(autoincrement())
  text      String
  gameId    Int
  game      Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  edition   Int?
  answer    String? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id        String    @id @default(dbgenerated("gen_random_uuid()"))
  gameId    Int
  gameEnded Boolean @default(false)
  game      Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  players   Player[]
  currentPlayerId String?
  playerOneId String?
  playerTwoId String?
  previousPairIds String[]
  allPairIds String[]
  previousPlayersIds String[]
  currentQuestionId Int?
  previousQuestionsId Int[]
  currentCard Int? @default(0)
  lastCard Int? @default(500)
  lastPlayerId String?
  previousCards Int[] @default([500])
  correctPrediction Boolean @default(false)
  rounds Int @default(0)
  currentRound Int? @default(0)
  questionAVotes String[]
  questionBVotes String[]
  startedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Player {
  id        String    @id @default(dbgenerated("gen_random_uuid()"))
  name      String
  points    Int?
  drinks    Int?
  roomId    String
  room      Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Parms {
  id        Int   @id @default(autoincrement())
  type      String
  name      String
  value     Int
  createdAt DateTime @default(now())
}

model Transaction {
  id                String   @id @default(dbgenerated("gen_random_uuid()"))
  userId            String
  profileType       String
  profileName       String
  amount            Int
  assignedRooms     Int
  usedRooms         String
  expiryDate        DateTime
  createdAt         DateTime @default(now())
}

